        <TextView
            android:id="@+id/history1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorHistListBG"
            android:paddingLeft="@dimen/innerHist_horizontal_margin"
            android:paddingRight="@dimen/innerHist_horizontal_margin"
            android:paddingTop="@dimen/innerHist_vertical_margin"
            android:text=""
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorHistLine1Text"
            android:textStyle="italic"
            android:visibility="visible"
            android:alpha="0.0"/>

        <TextView
            android:id="@+id/result1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/history1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="@color/colorHistListBG"
            android:paddingBottom="@dimen/innerHist_vertical_margin"
            android:paddingLeft="@dimen/innerHist_horizontal_margin"
            android:paddingRight="@dimen/innerHist_horizontal_margin"
            android:text=""
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:visibility="visible"
            android:alpha="0.0"/>

        <TextView
            android:id="@+id/history2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result1"
