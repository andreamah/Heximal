            android:paddingBottom="@dimen/innerHist_vertical_margin"
            android:paddingLeft="@dimen/innerHist_horizontal_margin"
            android:paddingRight="@dimen/innerHist_horizontal_margin"
            android:text=""
            android:textAlignment="textEnd"
